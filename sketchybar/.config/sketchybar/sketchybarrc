PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

sketchybar --bar position=top height=28 blur_radius=4 color=0xCC000000 margin=0

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

default=(
  padding_left=6
  padding_right=6
  icon.font="JetBrainsMono Nerd Font:Bold:16.0"
  label.font="JetBrainsMono Nerd Font:Bold:14.0"
  icon.color=0xffffffff
  label.color=0xffffffff
  icon.align=center
  label.align=center
  icon.y_offset=-0.5
  label.y_offset=0
  icon.padding_left=0
  icon.padding_right=2
  label.padding_left=2
  label.padding_right=0
)
sketchybar --default "${default[@]}"

##### Adding Left Items #####
# We add some regular items to the left side of the bar, where
# only the properties deviating from the current defaults need to be set

sketchybar --add event aerospace_workspace_change

sketchybar --add item space.current left \
           --subscribe space.current aerospace_workspace_change space_change \
           --set space.current \
           icon.drawing=off \
           icon.padding_left=0 \
           icon.padding_right=0 \
           padding_left=0 \
           padding_right=0 \
           label.padding_left=0 \
           label.padding_right=0 \
           label.max_chars=3 \
           width=16 \
           script="$CONFIG_DIR/plugins/aerospace.sh" \
           --add item chevron left \
           --set chevron icon="ó°…‚" label.drawing=off \
           icon.font="JetBrainsMono Nerd Font:ExtraBold:18.0" \
           padding_left=0 \
           padding_right=4 \
           icon.padding_left=1 \
           icon.padding_right=1 \
           --add item front_app left \
           --set front_app icon.drawing=off \
           padding_left=0 \
           label.padding_left=2 \
           script="$PLUGIN_DIR/front_app.sh" \
           --subscribe front_app front_app_switched

##### Adding Central Items #####

sketchybar --add item clock center \
           --set clock update_freq=30 \
           icon.drawing=off \
           icon.width=0 \
           icon.padding_left=0 \
           icon.padding_right=0 \
           script="$PLUGIN_DIR/clock.sh"


##### Adding Right Items #####
# More info about the event system can be found here:
# https://felixkratz.github.io/SketchyBar/config/events

sketchybar --add item battery right \
           --set battery update_freq=120 script="$PLUGIN_DIR/battery.sh" \
           icon.font="Hack Nerd Font:Bold:14.0" \
           --subscribe battery system_woke power_source_change \
           --add item volume right \
           --set volume script="$PLUGIN_DIR/volume.sh" update_freq=5 \
           --subscribe volume volume_change \
           --add item keyboard_layout right \
           --set keyboard_layout update_freq=1 \
           script="$PLUGIN_DIR/keyboard_layout.sh" \
           icon.drawing=off \
           label.font="JetBrainsMono Nerd Font:ExtraBold:12.0" \
           label.color=0xff000000 \
           label.padding_left=4 \
           label.padding_right=4 \
           background.drawing=on \
           background.color=0xffffffff \
           background.corner_radius=2 \
           background.height=14

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
